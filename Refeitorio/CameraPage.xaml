<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:camera="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="Refeitorio.CameraPage"
             NavigationPage.HasNavigationBar="False"
             Title="Reconhecimento Facial">
    <Grid>
        <camera:CameraView x:Name="cameraView" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="FillAndExpand" />

        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <VerticalStackLayout VerticalOptions="End" Padding="30" Spacing="20">
                <Button x:Name="CaptureButton"
                        Text="Registar Refeição"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        CornerRadius="30"
                        Clicked="OnCaptureClicked" />
                <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" Color="White" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>