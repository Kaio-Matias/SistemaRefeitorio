@page
@model Portal_Refeicoes.Pages.Colaboradores.IndexModel

@{
    ViewData["Title"] = "Colaboradores";
}

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Novo Colaborador
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Colaborador[0].Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colaborador[0].CartaoPonto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colaborador[0].Funcao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colaborador[0].Departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colaborador[0].Ativo)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Colaborador)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CartaoPonto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento)
                    </td>
                    <td>
                        @(item.Ativo ? "Sim" : "Não")
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>