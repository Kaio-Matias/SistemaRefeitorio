@page
@model Portal_Refeicoes.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo, @User.Identity.Name!</h1>
    <p>Selecione uma opção no menu lateral para começar a gerenciar o sistema.</p>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Colaboradores</div>
            <div class="card-body">
                <h5 class="card-title">150</h5>
                <p class="card-text">Total de colaboradores ativos.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Refeições Hoje</div>
            <div class="card-body">
                <h5 class="card-title">125</h5>
                <p class="card-text">Registros de refeição no dia de hoje.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Alertas</div>
            <div class="card-body">
                <h5 class="card-title">3</h5>
                <p class="card-text">Alertas pendentes de verificação.</p>
            </div>
        </div>
    </div>
</div>