@page
@model Portal_Refeicoes.Pages.Colaboradores.IndexModel
@{
    ViewData["Title"] = "Colaboradores";
}

<h1>Gestão de Colaboradores</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<p>
    <a asp-page="Create" class="btn btn-primary">Novo Colaborador</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Foto</th>
            <th>Nome</th>
            <th>Cartão de Ponto</th>
            <th>Departamento</th>
            <th>Função</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Colaboradores)
        {
            <tr>
                <td>
                    @if (item.Foto != null && item.Foto.Length > 0)
                    {
                        var base64 = Convert.ToBase64String(item.Foto);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
                    }
                </td>
                <td>@item.Nome</td>
                <td>@item.CartaoPonto</td>
                <td>@item.Departamento?.Nome</td>
                <td>@item.Funcao?.Nome</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>