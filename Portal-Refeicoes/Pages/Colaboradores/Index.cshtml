@page
@model Portal_Refeicoes.Pages.Colaboradores.IndexModel

@{
    ViewData["Title"] = "Colaboradores";
}

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Novo Colaborador
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Colaboradores[0].Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colaboradores[0].CartaoPonto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colaboradores[0].Funcao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colaboradores[0].Departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colaboradores[0].Ativo)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Colaboradores)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            @if (item.Foto != null && item.Foto.Length > 0)
                            {
                                var base64 = Convert.ToBase64String(item.Foto);
                                var imgSrc = $"data:image/jpeg;base64,{base64}";
                                <img src="@imgSrc" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" alt="Foto do Colaborador" />
                            }
                            else
                            {
                                <div class="rounded-circle me-2 bg-secondary d-flex justify-content-center align-items-center text-white" style="width: 40px; height: 40px;">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                            }
                            <span>@Html.DisplayFor(modelItem => item.Nome)</span>
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CartaoPonto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento)
                    </td>
                    <td>
                        @(item.Ativo ? "Sim" : "Não")
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>