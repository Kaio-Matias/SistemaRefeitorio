@page
@model Portal_Refeicoes.Pages.Colaboradores.CreateModel
@{
    ViewData["Title"] = "Novo Colaborador";
}

<h1>Novo Colaborador</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ColaboradorInput.Nome" class="control-label"></label>
                <input asp-for="ColaboradorInput.Nome" class="form-control" />
                <span asp-validation-for="ColaboradorInput.Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ColaboradorInput.CartaoPonto" class="control-label"></label>
                <input asp-for="ColaboradorInput.CartaoPonto" class="form-control" />
                <span asp-validation-for="ColaboradorInput.CartaoPonto" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ColaboradorInput.DepartamentoId" class="control-label"></label>
                <select asp-for="ColaboradorInput.DepartamentoId" class="form-control" asp-items="Model.Departamentos">
                    <option value="">-- Selecione um Departamento --</option>
                </select>
                <span asp-validation-for="ColaboradorInput.DepartamentoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ColaboradorInput.FuncaoId" class="control-label"></label>
                <select asp-for="ColaboradorInput.FuncaoId" class="form-control" asp-items="Model.Funcoes">
                    <option value="">-- Selecione uma Função --</option>
                </select>
                <span asp-validation-for="ColaboradorInput.FuncaoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ColaboradorInput.FotoFile" class="control-label"></label>
                <input asp-for="ColaboradorInput.FotoFile" class="form-control" type="file" />
                <span asp-validation-for="ColaboradorInput.FotoFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}