@page
@model Portal_Refeicoes.Pages.Colaboradores.CreateModel

@{
    ViewData["Title"] = "Novo Colaborador";
}

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">

                    @* Exibe um sumário de erros não associados a um campo específico *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Colaborador.Nome" class="form-label"></label>
                        <input asp-for="Colaborador.Nome" class="form-control" placeholder="Digite o nome completo" />
                        <span asp-validation-for="Colaborador.Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Colaborador.CartaoPonto" class="form-label"></label>
                        <input asp-for="Colaborador.CartaoPonto" class="form-control" placeholder="Digite o número do cartão" />
                        <span asp-validation-for="Colaborador.CartaoPonto" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Colaborador.DepartamentoId" class="form-label"></label>
                        <select asp-for="Colaborador.DepartamentoId" class="form-select" asp-items="Model.Departamentos">
                            <option value="">Selecione um Departamento</option>
                        </select>
                        <span asp-validation-for="Colaborador.DepartamentoId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Colaborador.FuncaoId" class="form-label"></label>
                        <select asp-for="Colaborador.FuncaoId" class="form-select" asp-items="Model.Funcoes">
                            <option value="">Selecione uma Função</option>
                        </select>
                        <span asp-validation-for="Colaborador.FuncaoId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Imagem" class="form-label">Foto do Colaborador</label>
                        <input asp-for="Imagem" type="file" class="form-control" accept="image/*" />
                        <span asp-validation-for="Imagem" class="text-danger"></span>
                    </div>

                    <hr />

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Criar Colaborador
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Voltar para a Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}