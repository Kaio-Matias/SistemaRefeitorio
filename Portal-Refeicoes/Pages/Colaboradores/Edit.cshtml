@page "{id:int}"
@model Portal_Refeicoes.Pages.Colaboradores.EditModel

@{
    ViewData["Title"] = "Editar Colaborador";
}

<h1>Editar</h1>
<h4>@Model.Colaborador.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Colaborador.Id" />

            <div class="mb-3">
                <label asp-for="Colaborador.Nome" class="form-label"></label>
                <input asp-for="Colaborador.Nome" class="form-control" />
                <span asp-validation-for="Colaborador.Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Colaborador.CartaoPonto" class="form-label"></label>
                <input asp-for="Colaborador.CartaoPonto" class="form-control" />
                <span asp-validation-for="Colaborador.CartaoPonto" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Colaborador.FuncaoId" class="form-label"></label>
                <select asp-for="Colaborador.FuncaoId" class="form-control form-select" asp-items="Model.Funcoes">
                    <option value="">-- Selecione uma Função --</option>
                </select>
                <span asp-validation-for="Colaborador.FuncaoId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Colaborador.DepartamentoId" class="form-label"></label>
                <select asp-for="Colaborador.DepartamentoId" class="form-control form-select" asp-items="Model.Departamentos">
                    <option value="">-- Selecione um Departamento --</option>
                </select>
                <span asp-validation-for="Colaborador.DepartamentoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="NovaImagem" class="form-label">Trocar Foto (opcional)</label>
                <input asp-for="NovaImagem" type="file" class="form-control" accept="image/jpeg, image/png" />
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Colaborador.Ativo">
                <label class="form-check-label" asp-for="Colaborador.Ativo">
                    Colaborador Ativo
                </label>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-center">
        <h5>Foto Atual</h5>
        @if (Model.Colaborador.FotoAtual != null && Model.Colaborador.FotoAtual.Length > 0)
        {
            var base64 = Convert.ToBase64String(Model.Colaborador.FotoAtual);
            var imgSrc = $"data:image/jpeg;base64,{base64}";
            <img src="@imgSrc" class="img-thumbnail" style="max-height: 300px; border-radius: 8px;" alt="Foto Atual do Colaborador" />
        }
        else
        {
            <div class="alert alert-info">Nenhuma foto cadastrada.</div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}