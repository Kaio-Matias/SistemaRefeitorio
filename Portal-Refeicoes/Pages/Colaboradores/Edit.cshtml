@page "{id:int}"
@model Portal_Refeicoes.Pages.Colaboradores.EditModel
@{
    ViewData["Title"] = "Editar Colaborador";
}

<h1>Editar Colaborador</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />

            <div class="form-group mb-3">
                <label asp-for="Input.Nome" class="control-label"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.CartaoPonto" class="control-label"></label>
                <input asp-for="Input.CartaoPonto" class="form-control" />
                <span asp-validation-for="Input.CartaoPonto" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.DepartamentoId" class="control-label"></label>
                <select asp-for="Input.DepartamentoId" class="form-control" asp-items="Model.Departamentos">
                </select>
                <span asp-validation-for="Input.DepartamentoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.FuncaoId" class="control-label"></label>
                <select asp-for="Input.FuncaoId" class="form-control" asp-items="Model.Funcoes">
                </select>
                <span asp-validation-for="Input.FuncaoId" class="text-danger"></span>
            </div>

            <hr />
            <h5 class="mt-4">Alterar Foto (Opcional)</h5>
            <div class="form-group mb-3">
                <label class="control-label">Nova Foto</label>
                <input name="NovaFoto" class="form-control" type="file" />
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h5>Foto Atual</h5>
        @if (Model.FotoAtual != null && Model.FotoAtual.Length > 0)
        {
            var base64 = Convert.ToBase64String(Model.FotoAtual);
            var imgSrc = $"data:image/jpeg;base64,{base64}";
            <img src="@imgSrc" class="img-fluid rounded" />
        }
        else
        {
            <p>Nenhuma foto cadastrada.</p>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}