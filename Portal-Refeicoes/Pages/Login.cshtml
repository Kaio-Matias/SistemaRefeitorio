@page
@model Portal_Refeicoes.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="login-form-container">
    <div class="text-center mb-5">
        <img src="~/img/logo.png" alt="Logo da Empresa" style="max-width: 220px;" />
    </div>

    <h2 class="login-title text-center mb-4">Login</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <div class="input-group mb-3">
            <span class="input-group-text"><i data-feather="mail"></i></span>
            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
        </div>
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <div class="input-group mb-4">
            <span class="input-group-text"><i data-feather="lock"></i></span>
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Senha" />
        </div>
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-login">ENTRAR</button>
        </div>
    </form>
</div>