@page
@model Portal_Refeicoes.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="card shadow-lg border-0 rounded-lg">
    <div class="card-header text-center bg-white border-0 py-4">
        <img src="~/img/logo.png" alt="Logo" style="max-width: 150px;" />
        <h3 class="font-weight-light mt-4 mb-0">Login</h3>
    </div>
    <div class="card-body">
        <form method="post">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" placeholder="Usuário" />
                <label asp-for="Input.Username"></label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Senha" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Entrar</button>
            </div>
        </form>
    </div>
</div>