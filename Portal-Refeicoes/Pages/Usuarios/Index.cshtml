@page
@model Portal_Refeicoes.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuários do Sistema";
}
<h1>Usuários do Sistema</h1>
<p>
    <a asp-page="Create" class="btn btn-primary">Novo Usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Permissão</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Usuarios)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>
                    @* Links de Editar e Excluir podem ser adicionados aqui no futuro *@
                </td>
            </tr>
        }
    </tbody>
</table>