@page
@model Portal_Refeicoes.Pages.Usuarios.CreateModel
@{
    ViewData["Title"] = "Novo Usuário";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" placeholder="Nome de Usuário" />
                <label asp-for="Input.Username"></label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Senha" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.Role" class="form-select">
                    <option value="" disabled selected>Selecione um perfil</option>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                    <option value="SuperAdmin">SuperAdmin</option>
                </select>
                <label asp-for="Input.Role">Perfil</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <input type="submit" value="Criar Usuário" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}